{
  "compileOnSave": true,

  "include": ["src"],

  "exclude": ["node_modules", "**/*.spec.ts"],

  "compilerOptions": {
    "outDir": "dist",

    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",

    "noUnusedParameters": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
